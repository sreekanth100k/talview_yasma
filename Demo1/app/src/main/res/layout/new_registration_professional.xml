<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewRegistrationProfessional"
    android:id="@+id/id_new_registration_professional_outermost_ll">

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/id_name_ll">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_name_tv"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_name_et"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/id_email_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_email_tv"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_email_et"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/id_mobile_ll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_mobile_tv"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_mobile_et"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_terms_privacy_policy_tv"
        android:text="@string/terms_privacy_policy"/>



    <Button
        android:layout_width="wrap_content"
        android:text="@string/sign_up_btn_text"
        android:id="@+id/id_sign_up_btn"
        android:layout_marginTop="100dip"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>